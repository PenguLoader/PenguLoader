<Page
    x:Class="PenguLoader.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:root="clr-namespace:PenguLoader"
    mc:Ignorable="d"

    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    d:DesignHeight="260" d:DesignWidth="450"

    Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
    Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock HorizontalAlignment="Left" Margin="20.5,20,0,0" FontSize="14" FontWeight="SemiBold" Height="20">
                <TextBlock.Text>
                    <MultiBinding StringFormat=" {0} v{1} #{2}">
                        <Binding Source="{x:Static root:Program.Name}" Path="." />
                        <Binding Source="{x:Static root:Program.Version}" Path="." />
                        <Binding Source="{x:Static root:Program.CommitSha1}" Path="." />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <Grid Margin="20,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Click="DiscordButtonClick" Grid.Column="0" Background="Transparent" BorderBrush="#6888"
                            Focusable="False" HorizontalAlignment="Stretch" Margin="0">
                        <TextBlock>
                            Discord
                            <fa5:ImageAwesome
                                Foreground="{DynamicResource SystemControlBackgroundBaseMediumHighBrush}"
                                Icon="Brands_Discord" Width="14" Margin="5,0,0,-1" />
                        </TextBlock>
                    </Button>
                    <Button Click="GitHubButtonClick" Grid.Column="1" Background="Transparent" BorderBrush="#6888"
                            Focusable="False" HorizontalAlignment="Stretch" Margin="5,0,0,0">
                        <TextBlock>
                            GitHub
                            <fa5:ImageAwesome
                                Foreground="{DynamicResource SystemControlBackgroundBaseMediumHighBrush}"
                                Icon="Brands_Github" Width="14" Margin="5,0,0,-1" />
                        </TextBlock>
                    </Button>
                </Grid>
                <Button Click="HomePageButtonClick" Background="Transparent" BorderBrush="#6888" Focusable="False"
                        HorizontalAlignment="Stretch" Margin="20,5">
                    <TextBlock>
                        Pengu.lol
                        <fa5:ImageAwesome
                            Foreground="{DynamicResource SystemControlBackgroundBaseMediumHighBrush}"
                            Icon="Solid_Link" Width="14" Margin="5,0,0,-1" />
                    </TextBlock>
                </Button>
                <ComboBox
                    ItemsSource="{Binding Source={x:Static root:App.Languages}}"
                    SelectedItem="{Binding Path=(root:App.Language), Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="20,5"
                    BorderThickness="1"
                    BorderBrush="#33333333"
                    HorizontalAlignment="Stretch" />
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource TOptions}" HorizontalAlignment="Stretch" Margin="20,10"
                           FontSize="14" FontWeight="SemiBold" />
                <StackPanel VerticalAlignment="Center">
                    <CheckBox Content="{DynamicResource TOptimizeClient}"
                              IsChecked="{Binding Path=OptimizeClient, Mode=TwoWay}" Focusable="False" Margin="20,5"
                              HorizontalAlignment="Stretch" />
                    <CheckBox Content="{DynamicResource TSuperPotatoMode}"
                              IsChecked="{Binding Path=SuperLowSpecMode, Mode=TwoWay}" Focusable="False" Margin="20,5"
                              HorizontalAlignment="Stretch" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Background="#2AAA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                           Text="{DynamicResource TActiveStatus}" FontSize="24" />
            </Grid>
            <Grid Grid.Column="1">
                <ui:ToggleSwitch
                    IsOn="{Binding Path=IsActivated, Mode=TwoWay}" OffContent="OFF" OnContent="READY" Focusable="False"
                    Margin="57,19,51,19" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    RenderTransformOrigin="0.5,0.5">
                    <ui:ToggleSwitch.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1.6" ScaleY="1.6" />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </ui:ToggleSwitch.RenderTransform>
                </ui:ToggleSwitch>
            </Grid>
        </Grid>
    </Grid>
</Page>