{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,

        "outDir": "types",

        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,

        "types": ["vite/client", "pengu"]
    },
    "include": [
        "src/**/*",
    ]
}